{
  "compilerOptions": {
    "module": "CommonJS",
    "noImplicitAny": false,
    "removeComments": false,
    "preserveConstEnums": true,
    "outDir": "dist",
    "sourceMap": true,
    "target": "ES2017",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "declaration": true,
    "declarationDir": "types",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "exclude": [
    "node_modules/*",
    "build/*",
    "dist/*",
    "types/*",
    "test/*"
  ],
  "typedocOptions": {
    "mode": "file",
    "out": "docs",
    "name": "CSBinary",
    "includeVersion": true,
    "stripInternal": true,
    "exclude": [
      "src/utils/**",      
      "src/constants/error.ts",
      "src/constants/number.ts",
      "src/addon/index.ts"
    ]
  }
}