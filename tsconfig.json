{
  "compilerOptions": {
    "module": "CommonJS",
    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "outDir": "build/src",
    "sourceMap": true,
    "target": "ES2017",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "declaration": true,
    "declarationDir": "build/types"
  },
  "exclude": [
    "node_modules/*",
    "build/*",
    "coverage/*",
    "test/*",
    "test.js",
    "test.ts"
  ]
}